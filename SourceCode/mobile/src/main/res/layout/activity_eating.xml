<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e8d8bd"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.github.pocmo.sensordashboard.EatingActivity">


    <ImageView
        android:id="@+id/spoon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:src="@drawable/spoon2" />

    <Button
        android:id="@+id/btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spoon"
        android:layout_margin="20dp"
        android:background="#491f17"
        android:gravity="center"
        android:text="EATING  START"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/count"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="100dp"
        android:text=""
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="80sp"
        android:textColor="#491f17"

        />


    <TextView
        android:id="@+id/state"
        android:layout_height="80sp"
        android:layout_width="wrap_content"
        android:layout_toRightOf="@+id/count"
        android:layout_below="@+id/btn"
        android:layout_marginTop="20dp"
        android:text=""
        android:gravity="bottom"
        android:textColor="#491f17"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/avgTerm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/count"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="Average term"
        android:textSize="16sp"
        android:textColor="#e8d8bd"
        />

    <TextView
        android:id="@+id/time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/avgTerm"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="Eating time"
        android:textSize="16sp"
        android:textColor="#e8d8bd"
        />
</RelativeLayout>
